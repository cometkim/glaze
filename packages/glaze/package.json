{
  "name": "glaze",
  "version": "0.5.1",
  "description": "CSS-in-JS microlibrary for making design systems approachable with React",
  "keywords": [
    "css-in-js",
    "design-system",
    "react",
    "typescript",
    "treat",
    "theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kripod/glaze.git",
    "directory": "packages/glaze"
  },
  "license": "MIT",
  "author": "Kristóf Poduszló <kripod@protonmail.com>",
  "sideEffects": false,
  "main": "./dist-node/index.js",
  "module": "./dist-web/index.js",
  "source": "./src/index.ts",
  "types": "./dist-types/index.d.ts",
  "files": [
    "dist-*/",
    "src/"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:node": "tsc --project ./tsconfig-node.json",
    "build:web": "tsc --build",
    "clean": "run-p clean:*",
    "clean:web": "tsc --build --clean",
    "develop": "run-p --print-label \"build:* --watch\""
  },
  "dependencies": {
    "@emotion/hash": "^0.8.0",
    "type-fest": "^0.13.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "peerDependencies": {
    "@types/react": ">=16.8",
    "react": ">=16.8",
    "treat": "^1"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  }
}
